<view class="container">
  <view class="title">
    <text id="tit">汽车图标</text>
  </view>
  <view class="car_type">
    <view class="type_style">
      <text class="type_name">热门</text>
    </view>
    <view bindtap="remen_click" class="content_img">
      <image src="../../image/12.jpg" style="width: 100%; height: 100%"></image>
      <image src="../../image/13.jpg" style="width: 100%; height: 100%"></image>
      <image src="../../image/11.jpg" style="width: 100%; height: 100%"></image>
    </view>
    <view class="type_style">
      <text class="type_name">A</text>
    </view>
    <view bindtap="aodi_click" class="icons_title" wx:for="{{car_icon_a}}">
      <view class="icons">
        <image src="{{item}}" style="width: 100%; height: 100%;"></image>
      </view>
      <view class="car_title">
        {{car_title_a[index]}}
      </view>
    </view>
    <view class="type_style">
      <text class="type_name">B</text>
    </view>
    <view class="icons_title" wx:for="{{car_icon_b}}">
      <view class="icons">
        <image src="{{item}}" style="width: 100%; height: 100%;"></image>
      </view>
      <view class="car_title">
        {{car_title_b[index]}}
      </view>
    </view>
    <view class="type_style">
      <text class="type_name">D</text>
    </view>
    <view class="icons_title" wx:for="{{car_icon_d}}">
      <view class="icons">
        <image src="{{item}}" style="width: 100%; height: 100%;"></image>
      </view>
      <view class="car_title">
        {{car_title_d[index]}}
      </view>
    </view>
    <view class="type_style">
      <text class="type_name">#</text>
    </view>
    
  </view>
</view>